{
  //https://clang.llvm.org/docs/ClangFormatStyleOptions.html
  "C_Cpp.clang_format_style": "{BasedOnStyle: Google, AlignConsecutiveAssignments: AcrossComments, ReferenceAlignment: Right, PointerAlignment: Right, IndentCaseLabels: true, AlignConsecutiveDeclarations: true, SortIncludes: Never, IndentWidth: 2, AccessModifierOffset: -2, ColumnLimit: 0, BreakStringLiterals: false, AlignConsecutiveAssignments: true, AlignConsecutiveMacros: AcrossEmptyLinesAndComments, AlwaysBreakBeforeMultilineStrings: false}",
  "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, AlignConsecutiveAssignments: AcrossComments, ReferenceAlignment: Right, PointerAlignment: Right, IndentCaseLabels: true, AlignConsecutiveDeclarations: true, SortIncludes: Never, IndentWidth: 2, AccessModifierOffset: -2, ColumnLimit: 0, BreakStringLiterals: false, AlignConsecutiveAssignments: true, AlignConsecutiveMacros: AcrossEmptyLinesAndComments, AlwaysBreakBeforeMultilineStrings: false}",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": false,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.smoothScrolling": true,
  "files.eol": "\n",
  "files.autoGuessEncoding": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/bin": true,
    "**/*.exe": true,
    "**/*.o": true,
    "**/*.obj": true,
    "**/*.ilk": true,
    "**/*.pdb": true,
    "**/*.tlog": true,
    "**/*.idb": true,
    "**/*.dll": true,
    "**.vs": true,
  },
  "workbench.editor.tabCloseButton": "left",
  "[markdown]": {
    "editor.wordWrap": "off",
    "files.trimTrailingWhitespace": false,
  },
  "files.associations": {
    "*.tcc": "cpp",
    "functional": "cpp",
    "tuple": "cpp",
    "array": "cpp",
    "deque": "cpp",
    "string": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "vector": "cpp",
    "initializer_list": "cpp",
    "fstream": "cpp"
  },
  "markdown-pdf.styles": [
    ""
  ],
  "markdown-pdf.margin.top": "2.5cm",
  "markdown-pdf.margin.bottom": "3.5cm",
  "markdown-pdf.margin.right": "2cm",
  "markdown-pdf.margin.left": "2cm"
}
